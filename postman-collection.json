{
  "info": {
    "name": "News Aggregator API",
    "description": "Collection for testing the News Aggregator API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', response.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "News",
      "item": [
        {
          "name": "Get Personalized News",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/news",
              "host": ["{{baseUrl}}"],
              "path": ["api", "news"]
            }
          }
        },
        {
          "name": "Search News",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/news/search/technology",
              "host": ["{{baseUrl}}"],
              "path": ["api", "news", "search", "technology"]
            }
          }
        },
        {
          "name": "Get News Sources",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/news/sources",
              "host": ["{{baseUrl}}"],
              "path": ["api", "news", "sources"]
            }
          }
        }
      ]
    },
    {
      "name": "Preferences",
      "item": [
        {
          "name": "Get Preferences",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/preferences",
              "host": ["{{baseUrl}}"],
              "path": ["api", "preferences"]
            }
          }
        },
        {
          "name": "Update Preferences",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"categories\": [\"technology\", \"business\", \"science\"],\n  \"sources\": [\"techcrunch\", \"bbc-news\"],\n  \"countries\": [\"us\", \"gb\"],\n  \"languages\": [\"en\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/preferences",
              "host": ["{{baseUrl}}"],
              "path": ["api", "preferences"]
            }
          }
        }
      ]
    },
    {
      "name": "Article Interactions",
      "item": [
        {
          "name": "Mark as Read",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/news/article-123/read?title=Sample Article&url=https://example.com/article",
              "host": ["{{baseUrl}}"],
              "path": ["api", "news", "article-123", "read"],
              "query": [
                {
                  "key": "title",
                  "value": "Sample Article"
                },
                {
                  "key": "url",
                  "value": "https://example.com/article"
                }
              ]
            }
          }
        },
        {
          "name": "Mark as Favorite",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/news/article-123/favorite?title=Sample Article&url=https://example.com/article",
              "host": ["{{baseUrl}}"],
              "path": ["api", "news", "article-123", "favorite"],
              "query": [
                {
                  "key": "title",
                  "value": "Sample Article"
                },
                {
                  "key": "url",
                  "value": "https://example.com/article"
                }
              ]
            }
          }
        },
        {
          "name": "Get Read Articles",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/news/read",
              "host": ["{{baseUrl}}"],
              "path": ["api", "news", "read"]
            }
          }
        },
        {
          "name": "Get Favorite Articles",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/news/favorites",
              "host": ["{{baseUrl}}"],
              "path": ["api", "news", "favorites"]
            }
          }
        },
        {
          "name": "Remove Favorite",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/news/article-123/favorite",
              "host": ["{{baseUrl}}"],
              "path": ["api", "news", "article-123", "favorite"]
            }
          }
        }
      ]
    }
  ]
}
